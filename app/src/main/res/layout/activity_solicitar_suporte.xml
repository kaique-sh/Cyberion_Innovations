<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1524">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#2A233C"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Botão Voltar -->
            <Button
                android:id="@+id/btnVoltar"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="← Voltar"
                android:textColor="#00FF84"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:textSize="16sp"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/solicitar_suporte"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#00FF84"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etAssunto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Assunto *"
                android:backgroundTint="#5A4F71"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:padding="12dp"/>

            <Spinner
                android:id="@+id/spinnerChamado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#37902B"
                android:padding="12dp"/>

            <EditText
                android:id="@+id/etDescricao"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Descreva o problema *"
                android:backgroundTint="#5A4F71"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:gravity="top|start"
                android:layout_marginBottom="24dp"
                android:padding="12dp"/>

            <Button
                android:id="@+id/btnEnviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enviar"
                android:textColor="#000000"
                android:textStyle="bold"
                android:backgroundTint="#00FF84"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
