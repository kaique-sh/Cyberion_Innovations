<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.cyberioninnovations">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CyberionInnovations"
        tools:targetApi="31">

        <!-- Tela de acompanhamento de tickets -->
        <activity
            android:name=".AcompanhamentoActivity"
            android:exported="false" />

        <!-- Tela de solicitação de suporte -->
        <activity
            android:name=".SolicitarSuporteActivity"
            android:exported="false" />

        <!-- Tela de cadastro de usuários -->
        <activity
            android:name=".Cadastro"
            android:exported="false" />

        <!-- Tela de contato -->
        <activity
            android:name=".ContatoActivity"
            android:exported="false" />

        <!-- Tela principal (pós-login) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Tela de login (inicial) -->
        <activity
            android:name=".Login"
            android:exported="true"
            tools:ignore="MissingClass">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
